       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_alignParentRight="true"

           >


               <ImageView
                    android:id="@+id/arrows1"
                    android:layout_width="30dp"
