<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="0dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/color_toptitle"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/color_toptitle"
                android:startColor="@color/color_toptitle"
                android:type="linear" />
            <!-- 应该是圆角 -->
            <corners android:topLeftRadius="3dp"
                android:bottomLeftRadius="3dp"/>
        </shape>
    </item>
</layer-list>