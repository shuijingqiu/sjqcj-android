<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/user_image1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/portrait2" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/head_frame" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/user_image1"
                android:text="张丽"/>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text2"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:text="2017-03-01 16:33:32"/>

            <TextView
                android:id="@+id/abstract_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text2"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/name_tv"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/user_image1"
                android:lines="1"
                android:ellipsize="end"
                android:text="个人简介"/>

            <TextView
                android:id="@+id/answer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_below="@+id/abstract_tv"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>

        </RelativeLayout>

      <TextView
          android:id="@+id/quiz_conten_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14sp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="5dp"
          android:layout_marginTop="-5dp"/>

      <Button
          android:id="@+id/answer_bt"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:textSize="12sp"
          android:layout_weight="1"
          android:background="@drawable/buttonstyle6"
          android:onClick="buyClick"
          android:text="回答"
          android:textColor="@color/white" />

  </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray_line"/>

</LinearLayout>