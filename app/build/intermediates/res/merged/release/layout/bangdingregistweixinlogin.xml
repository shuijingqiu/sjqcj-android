<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/color_toptitle" >

                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    layout="@layout/head_back_reuse" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="微信账号注册绑定"
                    style="@style/top_title"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/qqthirdlogin1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:src="@mipmap/weixinloge1"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/zuoyoujiantou1"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/weixinlogin1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="70dp"
                    android:src="@mipmap/applogo2"
                    android:visibility="visible" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:text="用户名"
                    android:textColor="#444444"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/loginusername1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shape2"
                    android:gravity="left"
                    android:hint="请输入用户名"
                    android:padding="10px"
                    android:singleLine="true"
                    android:textColorHint="#969696"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/isexist1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:text="邮箱"
                    android:textColor="#444444"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/loginemail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shape2"
                    android:gravity="left"
                    android:hint="请输入用户名"
                    android:padding="10px"
                    android:singleLine="true"
                    android:textColorHint="#969696"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/isexist2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:text="手机号"
                    android:textColor="#444444"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/fillphonecode1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shape2"
                    android:gravity="left"
                    android:hint="请输入手机号"
                    android:padding="10px"
                    android:singleLine="true"
                    android:textColorHint="#969696"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/isexist3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:text="密码"
                    android:textColor="#444444"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/loginpassword1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shape2"
                    android:gravity="left"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:padding="10px"
                    android:singleLine="true"
                    android:textColorHint="#969696"
                    android:textSize="14dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:text="验证码"
                    android:textColor="#444444"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/fillregistercode1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"
                    android:gravity="left"
                    android:hint="验证码"
                    android:padding="10px"
                    android:singleLine="true"
                    android:textColorHint="#969696"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/shortmessage1"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonstyle"
                    android:padding="5dp"
                    android:text="免费获取"
                    android:textColor="@color/color_999999"
                    android:textSize="12dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/line" />

            <Button
                android:id="@+id/registerbinding1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="17dp"
                android:background="@color/color_toptitle"
                android:text="确认"
                android:textColor="@color/color_ffffff"
                android:textSize="14dp" />

            <Button
                android:id="@+id/olduserlogin1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/buttonstyle"
                android:paddingTop="5dp"
                android:text="老用户登录"
                android:textColor="@color/color_000000"
                android:textSize="14dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>