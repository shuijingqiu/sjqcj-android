<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/color_toptitle" />
            <corners android:radius="3dp" />

        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/white"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/white"
                android:startColor="@color/white"
                android:type="linear" />
            <!-- 应该是圆角 -->
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>