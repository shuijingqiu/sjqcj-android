<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="万马股份 002276"
            android:textSize="16sp"
            android:textColor="@color/color_toptitle"/>

        <TextView
            android:id="@+id/type_tv"
            style="@style/business_tv"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_ef3e3e"
            android:text="买入"/>

        <TextView
            android:id="@+id/state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_text2"
            android:text="(已报)"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/entrust_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_text2"
                android:text="委托价格"/>

            <TextView
                android:id="@+id/entrust_price_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/entrust_price_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="18.91"/>

            <TextView
                android:id="@+id/entrust_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/entrust_price_tv"
                android:textColor="@color/color_text2"
                android:text="委托时间"/>

            <TextView
                android:id="@+id/entrust_time_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/entrust_time_tv"
                android:layout_below="@+id/entrust_price_tv"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="2016-12-12"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/entrust_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_text2"
                android:text="委托数量"/>

            <TextView
                android:id="@+id/entrust_number_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/entrust_number_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="800"/>

            <TextView
                android:id="@+id/frozen_fund_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/entrust_number_tv"
                android:textColor="@color/color_text2"
                android:text="冻结资金"/>

            <TextView
                android:id="@+id/frozen_fund_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/frozen_fund_tv"
                android:layout_below="@+id/entrust_number_value_tv"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="12405"/>

        </RelativeLayout>

    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"/>


        <TextView
            android:id="@+id/kill_an_order_tv"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="撤单"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/line"/>

</LinearLayout>
