<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-08-10 11:06:29"
            android:textColor="@color/color_000000"/>
        
        <TextView
            android:id="@+id/business_type_tv"
            style="@style/business_tv"
            android:background="@color/color_ef3e3e"
            android:layout_marginLeft="10dp"
            android:text="买入"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/transaction_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="成交价格"/>

            <TextView
                android:id="@+id/transaction_price_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/transaction_price_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="18.91"/>

            <TextView
                android:id="@+id/transaction_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/transaction_price_tv"
                android:text="成交金额"/>

            <TextView
                android:id="@+id/transaction_amount_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/transaction_amount_tv"
                android:layout_below="@+id/transaction_price_value_tv"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="288654.12"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/transactions_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="成交数量"/>

            <TextView
                android:id="@+id/transactions_number_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/transactions_number_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="100000"/>

            <TextView
                android:id="@+id/transaction_cost_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/transactions_number_tv"
                android:text="交易费用"/>

            <TextView
                android:id="@+id/transaction_cost_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/transaction_cost_tv"
                android:layout_below="@+id/transactions_number_value_tv"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="10.12"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"/>

</LinearLayout>
