<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_toptitle" >

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                layout="@layout/head_back_reuse" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="设置"
                style="@style/top_title" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pickaccountbound1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/color_ffffff"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="账号绑定：" />

            <Button
                style="@style/GreenButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/gracearrow1" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/pickessence"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/color_ffffff"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="申领认证：" />

            <Button
                style="@style/GreenButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/gracearrow1" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/pickmodifypassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="修改密码"
                android:textColor="#444444"
                android:textSize="16dp" />

            <Button
                style="@style/GreenButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/gracearrow1"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pickfeedback1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/color_ffffff"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="意见反馈：" />

            <Button
                style="@style/GreenButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/gracearrow1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line" />

        <LinearLayout
            android:id="@+id/pickexitapp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="退出账号"
                android:textColor="#444444"
                android:textSize="16dp" />

            <Button
                style="@style/GreenButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/gracearrow1"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line" />

        <LinearLayout
            android:id="@+id/picktemporaryexitapp1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/color_ffffff"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="暂时退出：" />

            <Button
                style="@style/GreenButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/gracearrow1" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/pickaboutmy"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/color_ffffff"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="关于我们：" />

            <Button
                style="@style/GreenButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/gracearrow1" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>