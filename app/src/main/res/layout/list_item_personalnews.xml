<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/user_image1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/portrait2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/head_frame"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/username1"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/user_image1"
            android:textColor="@color/color_text1"
            android:textSize="12dip"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/vip_img"
            style="@style/vip_img_style"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/username1"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lastmessage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/user_image1"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxEms="14"
            android:textColor="@color/color_text2"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/creatime1"
            android:layout_width="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="18:20"
            android:textColor="@color/color_text2"
            android:textSize="12dip" />

        <!--<TextView-->
            <!--android:id="@+id/commentcount1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center" />-->
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line"/>

</LinearLayout>