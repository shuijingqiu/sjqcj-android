<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/head_name_rl"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/portrait2" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/head_frame" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/head_iv"
            android:textColor="@color/color_text1"
            android:text="张三历史为"
            android:layout_centerVertical="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text2"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:text="已取消"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text="有效期至：2019-01-12 23：25"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text2"
        android:textSize="10sp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:text="牛人交易服务动态通知"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray_line"/>

</LinearLayout>
