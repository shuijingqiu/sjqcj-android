<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!--<item name="android:windowBackground">@drawable/ic_launcher</item>-->
        <item name="android:windowNoTitle">true</item>
    </style>
    
    
    
   

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_to_bottom</item>
    </style>

    <style name="AnimLeft" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item>
    </style>

    <style name="Widget.EditText.Black" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <style name="RedButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/selector_bg_f8356e_c_a</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/font_size_30</item>
    </style>
    
    <style name="GreyButtonWithBorder">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/selector_bg_bfa9a9a9_c_a_b_a</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/font_size_30</item>
    </style>

    <style name="GreenButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/selector_bg_2baf2b_c_a</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/font_size_30</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:background">@color/color_ededed</item>
    </style>

    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>
    
    
    <!--  鍙婃椂鑱婂ぉ-->
    
     <style name="chat_text_date_style">
	    <item name="android:padding">2dp</item>    
		<item name="android:textColor">#ffffff</item>   
		<item name="android:textSize">12sp</item>      
		<item name="android:background">#bfbfbf</item> 
	</style>
  
	     
	<style name="chat_content_date_style">
	    <item name="android:minHeight">50dp</item>
	    <item name="android:gravity">left|center</item>    
		<item name="android:textColor">#000000</item>   
		<item name="android:textSize">15sp</item>      
		<item name="android:lineSpacingExtra">2dp</item>   
		<item name="android:clickable">true</item>   
		<item name="android:focusable">true</item>   
		<item name="android:background">#bfbfbf</item> 
	</style>	 
	
	<style name="chat_text_name_style">  
		<item name="android:textColor">#818181</item>   
		<item name="android:textSize">15sp</item>      
		<item name="android:gravity">center</item> 
	</style>

    <!--最顶部导航栏的字体样式-->
    <style name="top_title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--所有箭头的图标样式-->
    <style name="arrow_img">
        <item name="android:background">@mipmap/youjiantou2</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!--当日牛股和当周牛股列表的Title-->
    <style name="nuigu_title">
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--所有文章列表页显示的字体样式-->
    <style name="article_list_text">
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:maxLength">160</item>
        <item name="android:maxLines">7</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/color_article</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--所有Item下面的用户名称-->
    <style name="item_name">
        <item name="android:textColor">@color/color_text1</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--所有Item下面的文章时间-->
    <style name="item_time">
        <item name="android:textColor">@color/color_text2</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="vip_img_style">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:src">@mipmap/v_07</item>
    </style>

    <style name="vip_img_style1">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@mipmap/v_07</item>
    </style>


    <!--股票详情买卖列表样式-->
    <style name="business_list">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <!--股票买卖表示样式-->
    <style name="business_tv">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
